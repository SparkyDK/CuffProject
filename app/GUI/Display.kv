#:kivy 1.10.1
<Display>
	Label:
		Image:
			source: './app/GUI/Screen.png'
			pos: root.x, root.y
			size: root.width, root.height
			allow_stretch: True
			keep_ratio: False
	Button:
		id: abort
		text: "RELEASE/\nRESET"
		pos_hint: {'x':0.04, 'y': 0.07}
		font_size: 40
		bold: True
		color: 1,1,1,1
		size_hint: 0.295, 0.36
		background_color: 1,0,0,0
		on_release: root.abort_function()
	Button:
		id: newpressure
		text: "789"
		font_size: 45
		color: 0,0,0,1
		pos_hint: {'x':0.31, 'y': 0.07}
		background_color: 0,0,0,0
		size_hint: 0.295, 0.36
	Button:
		id: up
		pos_hint: {'x':0.5825, 'y': 0.2825}
		size_hint: 0.17, 0.15
		background_color: 1,1,1,0
		on_release: root.newpressure_function( direction="up", desired_pressure=456 )
	Button:
		id: down
		pos_hint: {'x':0.5825, 'y': 0.0675}
		color: 1,1,1,1
		size_hint: 0.17, 0.15
		background_color: 1,1,1,0
